{
  "name": "a2a-copilot",
  "version": "1.0.1",
  "description": "A2A (Agent-to-Agent) protocol wrapper for the GitHub Copilot SDK. Drop a JSON config file in, get a fully-spec-compliant A2A server out. Supports any agent persona, MCP tool servers, streaming, context building, and multi-turn conversations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "a2a-copilot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "stop": "pkill -f 'node dist/cli.js' || true",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "agents",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "a2a",
    "agent-to-agent",
    "github-copilot",
    "copilot-sdk",
    "ai-agents",
    "mcp",
    "model-context-protocol",
    "interoperability",
    "multi-agent",
    "streaming",
    "openai",
    "anthropic"
  ],
  "author": "Shashi Kanth <124822098+shashikanth-gs@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shashikanth-gs/a2a-copilot.git"
  },
  "homepage": "https://github.com/shashikanth-gs/a2a-copilot#readme",
  "bugs": {
    "url": "https://github.com/shashikanth-gs/a2a-copilot/issues"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.9",
    "@github/copilot-sdk": "^0.1.25",
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
